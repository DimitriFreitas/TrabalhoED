<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.clinica_app.ClinicaController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Cadastro de Médico" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="campoId" promptText="ID do Médico" />
    <TextField fx:id="campoNome" promptText="Nome" />
    <TextField fx:id="campoEspecialidade" promptText="Especialidade" />

    <Button text="Cadastrar" onAction="#onCadastrarMedico" />
</VBox>
