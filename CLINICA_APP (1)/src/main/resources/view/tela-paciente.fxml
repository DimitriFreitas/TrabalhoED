<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.clinica_app.ClinicaController"
      prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Menu do Paciente" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Label text="Selecione uma opção:" style="-fx-font-size: 14px;" />

    <Button text="Agendar Consulta" onAction="#onAgendarConsultaPaciente" />
    <Button text="Cancelar Consulta" onAction="#onCancelarConsultaPaciente" />
    <Button text="Ver Consultas Agendadas" onAction="#onVerConsultasPaciente" />
    <Button text="Voltar ao Menu Principal" onAction="#onVoltarTelaInicial" />
</VBox>

